doctype html 
html 
    head 
        link(rel="stylesheet", href="output.css")
        title Movies 
    body(class="bg-[#000217]")
        div(class=`w-full h-screen bg-[url('https://wallpapercave.com/wp/wp13416984.jpg')] bg-cover bg-no-repeat bg-black/30 bg-blend-overlay grid place-items-center`) 
            h1(class="text-4xl lg:text-6xl font-bold text-white") Watch your best movies and series
        nav(class="flex justify-center mt-16") 
            ul(class="flex flex-wrap gap-4 text-white") 
                li 
                    a(href="/genres/action", class="border border-orange-500 rounded-xl px-6 py-3") Action
                li 
                    a(href="/genres/adventure", class="border border-orange-500 rounded-xl px-6 py-3") Adventure
                li 
                    a(href="/genres/drama", class="border border-orange-500 rounded-xl px-6 py-3") Drama
                li 
                    a(href="/genres/comedy", class="border border-orange-500 hover:border-orange-300 transition-colors ease-in-out duration-300 rounded-xl px-6 py-3") Comedy
                li  
                    a(href="/movies", class="bg-orange-500 hover:bg-orange-300 transition-colors ease-in-out duration-300 text-black px-6 py-3 rounded-xl") More

        ul 
            each val in data
                li 
                    article 
                        p= val.title 
                        img(src=`https://image.tmdb.org/t/p/w500${val.poster_path}`)
                        p= val.release_date 
                        p #{Number(val.vote_average.toFixed(1))}
        h2 Trending movies 
        ul 
            each val in trendingMovies 
                li
                    article 
                        p= val.title 
                        img(src=`https://image.tmdb.org/t/p/w500${val.poster_path}`)
                        p= val.release_date 
                        p #{Number(val.vote_average.toFixed(1))}